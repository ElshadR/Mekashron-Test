@model MyLoginRequest
@{
    ViewData["Title"] = "Login page";
}

<div id="login-row" class="row justify-content-center align-items-center">
    <div id="login-column" class="col-md-6">
        <div class="login-box col-md-12 ">
            <div class="text-danger" asp-validation-summary="All"></div>
            <h1 style="text-align:center;">Login</h1>
            <form asp-action="Login" method="post" class="login-fix">
                <div class="form-group mb-2">
                    <label asp-for="UserName" id="login-margin"></label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group mb-2" id="login-margin">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <button class="btn btn-primary" id="login-button" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>
